<%- layout("/layouts/boilerplate") %>
<body>
  <br />
  <h3>All Listings</h3>
  <!-- <form action="/listings/new" method="get">
        <button>Create listing</button>
    </form> -->
  <br />
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-2">
    <% for(let listing of allListings) { %>
    <a href="/listings/<%=listing.id%>" class="listing-links">
      <div class="card col lisitng-card">
        <img
          src="<%=listing.image%>"
          class="card-img-top"
          alt="listing-image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b>
            <br />
            <%= listing.price.toLocaleString("en-IN") %>
            / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
