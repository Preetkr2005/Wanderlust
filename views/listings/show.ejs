<%- layout("/layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3">
    <h3>Listing Details :</h3>
    </div>
    <div class="card col-6 offset-3 mt-3 show-card">
        <img src="<%= Listing.image %>" class="card-img-top show-img" alt="...">
        <div class="card-body">
            <p class="card-text"><b><%= Listing.title %></b></p>
            &#8377 <%= Listing.price.toLocaleString("en-IN")%> <br>
            <%= Listing.description %>
            <br>
            <%= Listing.location %>
            <br>
            <%= Listing.country %>
        </div>
    </div>
    </div>
    <div class="btns">
         <a href="/listings/<%=Listing.id%>/edit" class="btn btn-dark offset-3 add-btn">Edit</a>
        
        <form action="/listings/<%=Listing.id%>?_method=Delete" method="post">
        <button class="btn btn-dark offset-5">Delete</button>
    </form>
    </div>
    <br>
</body>
