<%- layout("/layouts/boilerplate") %>
<body>
  <div class="row offset-3">
    <div class="col-8">
      <form
        method="post"
        action="/listings/<%= Listing.id%>?_method=Put"
        novalidate
        class="needs-validation"
      >
        <br /><br />
        <h1>Edit listing</h1>
        <div class="md-3">
          <label for="title">Title</label>
          <input
            type="text"
            name="title"
            value="<%= Listing.title %>"
            class="form-control"
            required
          />
        
        </div>
        <div class="md-3">
          <label for="description">Description</label>
          <textarea
            name="description"
            type="text"
            cols="25"
            class="form-control"
            rows="10"
            required
          >
<%=Listing.description%> </textarea
          >
          <div class="invalid-feedback">Enter the short discription</div>
        </div>
        <div class="md-3">
          <label for="image">Image</label>
          <input
            type="text"
            name="image"
            value="<%= Listing.image %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the valid image-link</div>
        </div>
        <div class="md-3">
          <label for="price">Price</label>
          <input
            type="number"
            name="price"
            value="<%= Listing.price %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter the valid Price</div>
        </div>
        <div class="md-3">
          <label for="location">Location</label>
          <input
            type="text"
            name="location"
            value="<%=Listing.location %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid Location</div>
        </div>
        <div class="md-3">
          <label for="country">Country</label>
          <input
            type="text"
            name="country"
            value="<%= Listing.country %>"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Enter valid Country name</div>
        </div>
        <br />
        <br />
        <button class="btn btn-dark Submit-btn">Submit</button>
      </form>
      <br />
      <br />
    </div>
  </div>
</body>
